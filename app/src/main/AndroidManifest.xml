<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fungihouse">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_home"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_home"
        android:supportsRtl="true"
        android:theme="@style/Theme.FungiHouse">
        <activity android:name=".GrafikActivity"
            android:configChanges="orientation"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".KelembapanActivity" />
        <activity android:name=".SuhuActivity" />
        <activity android:name=".BerandaActivity" />
        <activity android:name=".OTPActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".UsernameActivity" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>